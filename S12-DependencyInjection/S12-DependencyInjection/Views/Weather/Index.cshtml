@model IEnumerable<CityWeather>

@{
	ViewData["Title"] = "Countries Weather Overview";

	string GetCSSColorForTemperature (int temperatureFahrenheit)
	{
		string cssColor = temperatureFahrenheit switch
		{
			(<= 59) => "#0078cf",
			(> 60 and <= 84) => "#facb01",
			(_) => "#ff7b02"
		};

		return cssColor;
	}
}


<h1 style="margin: 1rem 0; text-align:center; font-size:8rem">Weather Home Page</h1>
<div style="display: flex; justify-content: center; flex-direction: row;">
	<div style="width: 85%; display:flex; flex-flow:row wrap; justify-content: center; align-content: center; gap: 1rem; border-radius: 10px;">
		@foreach (CityWeather cityWeather in Model)
		{
			<div class="box margin-bottom blue-back" style="background-color:@GetCSSColorForTemperature(cityWeather.TemperatureFahrenheit ?? -1000000); display:flex; flex-direction:row; justify-content: space-between;">
				<div class="w-75">
					<h1>@cityWeather.CityName</h1>
					<h6 class="text-dark-grey margin-top">@cityWeather.DateAndTime!.Value.GetDateTimeFormats()[22]</h6>
					<h6 class="margin-top"><a href="Weather/@cityWeather.CityUniqueCode">Details</a></h6>
				</div>
				<div class="vertical-divider"></div>
				<div style="align-self: center;">
					<h2>@cityWeather.TemperatureFahrenheit <text class="text-dark-grey"><sup>°F</sup></text></h2>
				</div>
			</div>
		}
	</div>
</div>
